---
import ProductCard from './ProductCard.astro';
import type { FullMarttiiniProduct } from '../loaders/marttiini/marttiini';

interface Props {
  products: FullMarttiiniProduct[];
  lang: string;
  categoryName?: string;
}

const { products, lang, categoryName } = Astro.props;
---

<section class="py-4 py-md-5">
  <div class="container">
    {categoryName && (
      <h2 class="display-6 fw-bold mb-4">{categoryName}</h2>
    )}
    
    {products.length > 0 ? (
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 row-cols-xl-5 g-3 g-md-4">
        {products.map((product) => (
          <div class="col">
            <ProductCard product={product} lang={lang} />
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center text-muted py-5">
        <p class="fs-5">No products found in this category.</p>
      </div>
    )}
  </div>
</section>
