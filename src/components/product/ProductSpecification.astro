---
import type { AttributeGroup } from '../../content/product.repository';

export type Props = {
  specification: AttributeGroup;
};

const { specification } = Astro.props;
---

{specification && specification.properties && (
  <ul class="list-group list-group-flush">
    {specification.properties.map((prop) => (
      <li class="list-group-item d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-start gap-2">
        <strong class=" flex-shrink-0">{prop.name}</strong>
        <span class="text-end text-sm-end">{prop.value}</span>
      </li>
    ))}
  </ul>
)}
