---
import { Navbar } from "astro-bootstrap";
import type { NavbarItemType } from "astro-bootstrap";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const siteTitle = "Astro site"; // pull this in from a config file
const items: NavbarItemType[] = [
  { text: t('nav.company'), href: "#" },
  { text: t('nav.partners'), href: "#" },
  { text: t('nav.databank'), href: "#" },
  { text: t('nav.contact'), href: "#" },
];

const id = "navbarDemo";
---

<Navbar class="navbar-expand-lg">
    <Navbar.Toggler controls={id} />
    <Navbar.Collapse {id}>
      <Navbar.Items {items} class="me-auto mb-2 mb-lg-0 justify-content-between w-100" />
    </Navbar.Collapse>
</Navbar>
